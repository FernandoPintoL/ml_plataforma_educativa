# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL
# ===========================================
# Para Railway: Obtener de la variable DATABASE_URL
# Compartida con Laravel - misma BD
DATABASE_URL=postgresql://USER:PASSWORD@localhost:5432/educativa_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=educativa_db
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# ===========================================
# CONFIGURACIÓN DE REDIS/CACHÉ (OPCIONAL)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===========================================
# CONFIGURACIÓN DE API FASTAPI
# ===========================================
API_HOST=0.0.0.0
API_PORT=${PORT:-8001}
API_RELOAD=False
API_WORKERS=4

# ===========================================
# CONFIGURACIÓN GENERAL
# ===========================================
DEBUG=True
LOG_LEVEL=INFO
PROJECT_NAME=Plataforma Educativa ML
PROJECT_VERSION=2.0.0

# ===========================================
# DEEP LEARNING (GPU - Para Fase 3)
# ===========================================
USE_GPU=False
GPU_DEVICE=0
TF_RANDOM_SEED=42

# ===========================================
# SEGURIDAD
# ===========================================
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# NOTAS DE CONFIGURACIÓN
# ===========================================
# 1. DATABASE_URL: Usar misma BD que Laravel
#    Ejemplo: postgresql://root:password@localhost:5432/plataforma_educativa
#
# 2. API_PORT: Debe ser diferente de Laravel (8000)
#    Usar puerto 8001 o 8002
#
# 3. DEBUG=True en desarrollo, False en producción
#
# 4. USE_GPU: True si tienes NVIDIA CUDA disponible
#    (Solo necesario para Fase 3 - Deep Learning)
#
# 5. LOG_LEVEL: DEBUG, INFO, WARNING, ERROR, CRITICAL
#
# 6. Cambiar SECRET_KEY en producción
#
# 7. NO COMMITAR ESTE ARCHIVO A GIT
#    Mantener .env.example como plantilla
