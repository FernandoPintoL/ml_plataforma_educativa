{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "context": ".",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "python -m uvicorn app:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 3
  },
  "plugins": [
    {
      "source": "https://github.com/railwayapp/railway-plugin-postgresql.git",
      "config": {
        "name": "PostgreSQL",
        "description": "PostgreSQL database for ML models"
      }
    }
  ],
  "variables": {
    "ENVIRONMENT": "production",
    "DEBUG": false,
    "API_WORKERS": 4,
    "LOG_LEVEL": "INFO",
    "USE_GPU": false,
    "API_RELOAD": false
  }
}
